
<div class="container mt-3">
  <div class="jumbotron">
    {{#if products.[0] }}
      <div class="table-responsive">
        <table class="table table-dark">
          <tr style="color: yellow;"> <th>Title</th> <th>Price</th> <th>Category</th> <th>Image</th> </tr>
          {{#each products as | product |}}
            <tr>
              <td> {{title}} </td>
              <td> {{price}} </td>
              <td> {{category}} </td>
              <td> {{image}} </td>
            </tr>
          {{/each}}
        </table>
      </div>
    {{else}}
      <h3 style="color: black">no existen datos</h3>
    {{/if}}
    <a href='/api/products/form' class="btn btn-primary mt-3 mb-0">Go to Product List</a>
  </div>
</div>


